@model List<PriorityListDto>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Aciliyet Tanımlama";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="page-content page-container mt-4" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-lg-10 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h4 class="card-title">Aciliyet Tanımları</h4>
                                <p class="card-description">Sistemde tanımlı olan aciliyet durumları</p>
                            </div>
                            <div>
                                <a asp-action="Create" asp-controller="Priority" asp-area="Admin" class="btn btn-sm btn-warning">
                                    <i class="fas fa-plus"></i> Yeni Aciliyet Ekle
                                </a>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Tanım</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model?.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Definition</td>
                                                <td>
                                                    <a asp-action="Update" asp-controller="Priority" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                        <i class="fas fa-edit"></i> Düzenle
                                                    </a>
                                                    <a asp-action="Delete" onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-controller="Priority" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash-alt"></i> Sil
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2" class="text-center">Herhangi bir aciliyet bulunamadı.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div> <!-- card-body -->
                </div> <!-- card -->
            </div> <!-- col -->
        </div> <!-- row -->
    </div> <!-- padding -->
</div> <!-- page-content -->
