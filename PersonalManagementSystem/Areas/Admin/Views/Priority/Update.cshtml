@model PriorityUpdateRequest
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Aciliyet Durum Güncelle";
}

<form asp-action="Update" asp-controller="Priority" asp-area="Admin" class="mt-3" method="post">
    
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label class="form-label">Aciliyet durumunu giriniz</label>
        <input type="text" class="form-control" asp-for="Definition">
    </div>


    <div class="d-grid gap-2">
        <a asp-action="List" asp-controller="Priority" asp-area="Admin" class="btn btn-primary">Vazgeç</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div asp-validation-summary="All" class="text-danger lead">

    </div>
</form>