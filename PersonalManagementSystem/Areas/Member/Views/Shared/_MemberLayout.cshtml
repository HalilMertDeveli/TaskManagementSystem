<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <!-- Boxicons for icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/areas/Member/Shared/shared.css" asp-append-version="true" />
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img">
            <a asp-action="UserDetail" asp-controller="User">
                <img src="https://i.imgur.com/hczKIze.jpg" alt="profile">
            </a>
        </div>

    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo">
                    <i class='bx bx-layer nav_logo-icon'></i>
                    <span class="nav_logo-name">Kurumsal Personel Takip Sistemi Otomasyonu </span>
                </a>
                <div class="nav_list">
                    <a asp-action="UserDetail" asp-controller="User" class="nav_link @(ViewBag.Active=="Profil" ? "active" : "")">
                        <i class='bx bx-user nav_icon'></i>
                        <span class="nav_name">Profil</span>
                    </a>
                    <a asp-action="List" asp-controller="AppTask" asp-area="Member" class="nav_link @(ViewBag.Active=="AppTask" ? "active" : "")">
                        <i class='bx bx-folder nav_icon'></i>
                        <span class="nav_name">İş Emirleri</span>
                    </a>
                    <a asp-action="List" asp-controller="Notification" asp-area="Member" class="nav_link @(ViewBag.Active=="Notification" ? "active" : "")">
                        <i class='bx bx-message-square-detail nav_icon'></i>
                        <span class="nav_name">Bildirimler</span>
                    </a>
                </div>
            </div>
            <a asp-action="LogOut" asp-controller="Account" asp-area="" class="nav_link">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">Çıkış Yap</span>
            </a>
           
        </nav>
    </div>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Custom JS -->
    <script src="~/areas/Member/Shared/shared.js" asp-append-version="true"></script>
</body>
</html>